---
import ProfileIcon from '../assets/icons/ProfileIcon.astro';
import ServicesIcon from '../assets/icons/ServicesIcon.astro';
import StoreIcon from '../assets/icons/StoreIcon.astro';
import EventsIcon from '../assets/icons/EventsIcon.astro';
import TransformIcon from '../assets/icons/TransformIcon.astro';
import MenuIcon from '../assets/icons/MenuIcon.astro';
import CloseIcon from '../assets/icons/CloseIcon.astro';
---

<script>
  let isOpen = false;

  (window as any).toggleMenu = function () {
    isOpen = !isOpen;
    const menu = document.getElementById('mobileMenu');
    if (menu) {
      menu.classList.toggle('translate-x-full');
      menu.classList.toggle('translate-x-0');
    }
  };
</script>

<nav class="fixed top-0 left-0 w-full bg-white shadow-md z-50">
  <div class="max-w-7xl mx-auto md:px-8 px-3">
    <div class="flex items-center justify-between h-12">
      
      <a href="#inicio" aria-label="Inicio">
        <img src="/images/dk_logo_black_transparent.webp" class="w-12" alt="Logo" />
      </a>

      <div class="hidden md:flex gap-x-6 md:gap-x-12">
        <a
          href="#perfil"
          class="flex items-center gap-1 text-gray-800 hover:text-green-700 transition"
        >
          <ProfileIcon size="20" />
          Perfil
        </a>
        <a
          href="#servicios"
          class="flex items-center gap-1 text-gray-800 hover:text-green-700 transition"
        >
          <ServicesIcon size="20" />
          Servicios
        </a>
        <a
          href="#team"
          class="flex items-center gap-1 text-gray-800 hover:text-green-700 transition"
        >
          <TransformIcon size="20" />
          Team
        </a>
        <a
          href="#tienda"
          class="flex items-center gap-1 text-gray-800 hover:text-green-700 transition"
        >
          <StoreIcon size="20" />
          Mi tienda
        </a>
        <a
          href="#eventos"
          class="flex items-center gap-1 text-gray-800 hover:text-green-700 transition"
        >
          <EventsIcon size="20" />
          Eventos
        </a>
      </div>

      <button onclick="toggleMenu()" class="md:hidden text-gray-800">
        <MenuIcon size="28" />
      </button>
    </div>
  </div>

  <div
    id="mobileMenu"
    class="fixed top-0 right-0 h-full w-72 bg-white shadow-lg transform translate-x-full transition-transform duration-300 ease-in-out z-50 md:hidden"
  >
    <div class="flex justify-between px-6 h-12 items-center mb-5 border-b border-gray-400">
      <h1 class="font-semibold text-lg">Daniel Kelly Fit | Menu</h1>
      <button onclick="toggleMenu()" aria-label="Cerrar menÃº">
        <CloseIcon size="24" />
      </button>
    </div>
    <nav class="flex flex-col space-y-8 px-6 text-lg">
      <a href="#perfil" onclick="toggleMenu()" class="flex items-center gap-1 text-gray-800">
        <ProfileIcon size="20" />Perfil</a
      >
      <a href="#servicios" onclick="toggleMenu()" class="flex items-center gap-1 text-gray-800"
        ><ServicesIcon size="20" />Servicios</a
      >
      <a href="#team" onclick="toggleMenu()" class="flex items-center gap-1 text-gray-800"
        ><TransformIcon size="20" />Team</a
      >
      <a href="#tienda" onclick="toggleMenu()" class="flex items-center gap-1 text-gray-800"
        ><StoreIcon size="20" />Mi tienda</a
      >
      <a href="#eventos" onclick="toggleMenu()" class="flex items-center gap-1 text-gray-800"
        ><EventsIcon size="20" />Eventos</a
      >
    </nav>
  </div>
</nav>
